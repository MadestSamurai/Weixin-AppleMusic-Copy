/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.tab_bar {
  background-color:rgb(243, 243, 243);
  position: fixed;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.menu-item {
  float: left;
  border-top: 1px solid rgb(200, 200, 200);
  text-align: center;
  width: 33.3%;
  padding-bottom: 18px;
  padding-top: 10px;
}
 
.img {
  width: 23px;
  height: 23px;
  display: block;
  margin: auto;
}

.tabTextHl{
  font-size: 14px;
  font-weight: 600;
  color: #d60017;
}

.tabTextNm{
  font-size: 14px;
  font-weight: 600;
  color: gray;
}
 
.clear {
  clear: both;
}

.headerTitle {
  display: block;
  padding-top: 3vh;
  font-size: 35px;
  line-height: 70px;
  font-weight: 700;
}

.header {
  align-items: center;
  flex-wrap: nowrap;
  width: 91%;
  flex-direction: column;
  border-bottom: 1px solid lightgray;
  margin: 20rpx 20rpx 0 20rpx;
}

.subtitle{
  font-size: 18px;
  font-weight: 600;
  line-height: 33px;
  margin-left: 3%;
  margin-bottom: 2%;
  margin-top: 2%;
  display: inline-block;
  width: 90%;
}

.footer{
  padding-bottom: 80px;
  width: 100%;
  text-align: center;
  border-top: 1px solid lightgray;
  margin-top: 10px;
}

.footerTitle{
  font-size: 15px;
  color: gray;
  line-height: 30px;
}

text {
  font-family:'SF Pro Display', 'Pingfang SC', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}