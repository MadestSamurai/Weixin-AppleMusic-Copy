/**index.wxss**/
.funcLine {
  width: 100%;
  height: 55px;
  display: flex;
  align-items: center;
  font-size: 19px;
  border-bottom: 1px solid lightgray;
}

.funcList {
  align-items: center;
  flex-wrap: nowrap;
  width: 91%;
  border-radius: 10px;
  flex-direction: column;
  margin-left: 22rpx;
}

.icon {
  width: 30px;
  height: 30px;
  padding-right: 5px;
}

.nm_cover {
  width: 100%;
  height: 80%;
  display: inline-block;
  border: none;
  border-radius: 4px;
}

.nm_title {
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: black;
  line-height: 20px;
  font-size: 14px;
}

.nm_artist {
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: gray;
  line-height: 20px;
  font-size: 14px;
}

.scrollview {
  width: 100%;
  height: 100%;
  flex-wrap: wrap;
}

.boxview {
  width: 46%;
  height: 440rpx;
  margin: 4px;
  display: inline-block;
  padding: 5px 0 0 5px;
}