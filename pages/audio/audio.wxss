.music-container {
  display: flex;
  align-items: center;
  flex-direction: column;
  background: transparent;
  overflow: hidden;
  width: 100vw;
  height: 100vh;
}

.background {
  position: absolute;
  top: 0;
  height: 80vh;
  width: 80vh;
  z-index: 1;
  filter: blur(110px) brightness(75%);
}

.bg-large {
  position: absolute;
  top: -50vh;
  height: 200vh;
  width: 200vh;
  filter: blur(110px) brightness(75%);
}

.rotate-animate{
  animation: rotate 40s 1s linear infinite;
}
@keyframes rotate{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}

.text {
  margin-top: 16%;
  width: 86%;
  display: flex;
  flex-direction: column;
  z-index: 2;
  position: absolute;
  bottom: 30%;
}

.text-alt {
  position: absolute;
  margin-top: 12%;
  width: 50%;
  display: flex;
  flex-direction: column;
  z-index: 2;
}

.text-album {
  position: absolute;
  margin-top: 30%;
  width: 86%;
  display: flex;
  flex-direction: column;
  z-index: 2;
}

.text-album .caption {
  color: #fff;
  font-size: 36rpx;
}

.text-album .from {
  color: #fff;
  opacity: 0.6;
  font-size: 28rpx;
  line-height: 50rpx;
}

.music-name {
  color: #fff;
  white-space: nowrap;
  font-size: 36rpx;
  line-height: 50rpx;
}

.music-author {
  color: #fff;
  opacity: 0.6;
  white-space: nowrap;
  font-size: 36rpx;
  line-height: 50rpx;
}

.music-image {
  position: absolute;
  width: 650rpx;
  height: 650rpx;
  margin-top: 27%;
  border-radius: 10px;
  z-index: 1;
}

.music-image-alt {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  margin-top: 10%;
  margin-right: 70%;
  border-radius: 3px;
  z-index: 1;
}

.player {
  width: 100%;
  position: absolute;
  bottom: 15%;
  z-index: 2;
}

.player .btns {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}

.player .btns image {
  width: 90rpx;
  height: 90rpx;
}

.progress-container {
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 21%;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  margin-top: 4%;
  margin-bottom: 6%;
  z-index: 2;
}
.progress-container .bar-box{
  width: 646rpx;
  height: 4rpx;
  line-height: 4rpx;
  background: rgba(255, 255, 255, 0.6);
}
.bar-box .current-progress{
  position: relative;
  height: 4rpx;
  line-height: 4rpx;
  background: #fff;
}
.bar-box .left-progress{
  position: relative;
  height: 4rpx;
  line-height: 4rpx;
  background: #fff;
}
.progress-circle{
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  right: -16rpx;
  top: -6rpx;
}
.progress-container text{
  color: #ccc;
  font-size: 22rpx;
  margin: 0 40rpx;
}


.bar-text{
  margin-top: 2%;
  display: flex;
  flex-direction: row;
  width: 97%;
  opacity: 0.6;
}

.bar-text .cur-text{
  width: 50%;
  text-align: left;
}

.bar-text .left-text{
  width: 50%;
  text-align: right;
}

.options {
  width: 100%;
  position: absolute;
  bottom: 7%;
  z-index: 2;
}

.options .btns {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}

.options .btns image {
  width: 45rpx;
  height: 45rpx;
  opacity: 0.6;
}

.header{
  display: flex;
  align-items: center;
}
.header image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}
.header text{
  color: #fff;
  height: 28rpx;
  line-height: 28rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}
.music-list{
  position: absolute;
  top: 24%;
  color: #fff;
  width: 86%;
  height: 45%;
  z-index: 2;
}
.list-item{
  display: flex;
  align-items: center;
  height: 100rpx;
  margin: 20rpx 0;
  position: relative;
}
.list-item .list-index{
  width: 50rpx;
  font-size: 28rpx;
  color: #fff;
  opacity: 0.6;
}
.list-item .list-image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}
.list-item .list-info{
  display: flex;
  flex-direction: column;
}
.list-item .list-info .list-author{
  font-size: 28rpx;
  color: #fff;
  opacity: 0.6;
  margin-top: 10rpx;
}
