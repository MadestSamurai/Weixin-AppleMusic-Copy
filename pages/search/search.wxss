/* pages/search/search.wxss */
.search-bar{
  margin-top: 10px;
  width:100%;
  height:100rpx;
  background: #ffffff;
}

.search-bar-warper{
  background:#eeeeee;
  height:80rpx;
  margin:0 20rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  align-items: center;
  display: flex;
  /*width:100%;*/
}

.search {
  position: sticky;
  top: 0;
  z-index: 9999;
}

.nm_cover {
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 4px;
}

.nm_title {
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: white;
  line-height: 20px;
  font-size: 14px;
  font-weight: 600;
  transform: translate(15rpx,-55rpx);
}

.scrollview {
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.boxview {
  width: 100%;
  height: 200rpx;
  margin: 2px;
  margin-bottom: -20px;
  padding: 5px 0 0 5px;
  overflow: hidden;
}

.contain {
  width: 46%;
  margin: 4px;
  height: 200rpx;
  display: inline-block;
}