/* pages/search/search.wxss */
.search-bar{
  margin-top: 10px;
  width:100%;
  height:100rpx;
  background: #ffffff;
}

.search-bar-warper{
  background:#eeeeee;
  height:80rpx;
  margin:0 20rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  align-items: center;
  display: flex;
}

.search {
  position: sticky;
  top: 0;
  z-index: 9999;
}

.nm_cover {
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 4px;
}

.nm_title {
  display: block;
  color: white;
  line-height: 20px;
  font-size: 14px;
  font-weight: 600;
  transform: translate(15rpx,-55rpx);
}

.scrollview {
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.boxview {
  width: 100%;
  height: 200rpx;
  margin: 2px;
  margin-bottom: -20px;
  padding: 5px 0 0 5px;
  overflow: hidden;
}

.contain {
  width: 46%;
  margin: 4px;
  height: 200rpx;
  display: inline-block;
}

.contentview {
  height: 100vh;
  width: 100%;
}

.swiperview {
  width: 100%;
  height: 100%;
  border-bottom: 1px solid paleturquoise;
}

.menuview {
  width: 100%;
  height: 4.5vh;
  display: flex;
  justify-content: center;
}

.menuitem {
  width: 25%;
  font-size: 17px;
  /* border: 1px solid black; */
  display: flex;
  align-items: top;
  justify-content: center;
  padding-right: 10px;
  padding-left: 10px;
  color: gray;
}

.on {
  color: #d60017;
  border-bottom: 2px solid #d60017;
  font-weight: bold;
}

.box {
  width: 100%;
  height: 100%;
}

.box_menu {
  width: 100%;
  height: 100%;
}

.bg1 {
  background-color: seashell;
}

.bg2 {
  background-color: skyblue;
}

.bg3 {
  background-color: springgreen;
}

.bg4 {
  background-color: sandybrown;
}

.music-list{
  width: 100%;
  height: 100%;
}
.list-item{
  display: flex;
  align-items: center;
  height: 100rpx;
  margin: 20rpx 5%;
  position: relative;
}
.list-item .list-index{
  width: 50rpx;
  font-size: 28rpx;
  opacity: 0.6;
}
.list-item .list-image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  background: url(http://49.234.6.100/images/default-artist.png);
  background-size: 100% 100%;
}
.list-item .list-info{
  display: flex;
  flex-direction: column;
}

.list-item .list-info .list-name{
  width: 75vw;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.list-item .list-info .list-author{
  font-size: 28rpx;
  opacity: 0.6;
  margin-top: 10rpx;
}

.next-button{
  margin-bottom: 20px;
  width: 100%;
}

.phstyle{
  font-family:'SF Pro Display', 'Pingfang SC'
}

.input {
  font-family:'SF Pro Display', 'Pingfang SC'
}