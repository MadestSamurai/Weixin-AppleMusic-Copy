/* pages/album/album.wxss */
.poster {
  width: 100%;
  height: 100%;
  vertical-align: middle;
  text-align: center;
}

.cover {
  width: 500rpx;
  height: 500rpx;
  border: none;
  box-shadow: 0 12px 5px -10px rgba(0, 0, 0, 0.1), 0 0 4px 0 rgba(0, 0, 0, 0.1);
  border-radius: 8px;
}

.title {
  display: block;
  padding-top: 25rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  text-align: center;
  font-size: 19px;
  line-height: 50rpx;
  font-weight: 600;
}

.artist {
  text-align: center;
  display: block;
  font-size: 19px;
  line-height: 50rpx;
  color: #d60017;
}

.genre-and-year {
  font-size: 14px;
  line-height: 50rpx;
  text-align: center;
  display: block;
  color: grey;
  font-weight: 500;
}

.button {
  width: 45%;
  line-height: 80rpx;
  font-weight: 500;
  display: inline-block;
  margin: 2%;
  color: #d60017;
  background-color: #eeeef0;
  border-radius: 5px;
}

.button-content {
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-text {
  font-weight: 600;
}

.icon {
  width: 20px;
  height: 20px;
  padding-right: 5px;
}

.introduction {
  width: 95%;
  font-size: 14px;
  color: gray;
  padding-left: 3%;
  margin-top: 5%;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.more-button {
  text-align: right;
  padding-right: 5%;
  box-sizing: border-box;
}

.more {
  font-size: 15px;
  color: #d60017;
}

.song-line {
  width: 100%;
  height: 55px;
  display: flex;
  align-items: center;
  font-size: 19px;
  border-bottom: 1px solid lightgray;
  font-size: 17px;
}

.song-list {
  align-items: center;
  flex-wrap: nowrap;
  width: 91%;
  border-radius: 10px;
  flex-direction: column;
  margin-left: 22rpx;
}

.number {
  color: gray;
  width: 5%;
  margin-right: 10px;
  margin-left: 5px;
  font-size: 17px;
}

.song-title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.date {
  padding-top: 5px;
  padding-bottom: 30px;
  padding-left: 15px;
  color: gray;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 9000;
  overflow: hidden;
}

/* 弹出层 */
.modalDlg {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ok {
  position: fixed;
  margin-top: 15px;
  right: 15px;
  height: 35px;
  color: #d60017;
  font-weight: 500;
}

.text {
  text-align: justify;
  font-size: 14px;
  color: black;
  width: 90%;
  margin-top: 10px;
  margin-bottom: 30px;
  display: -webkit-box;
  -webkit-line-clamp: 40;
  -webkit-box-orient: vertical;
  overflow: hidden;
}